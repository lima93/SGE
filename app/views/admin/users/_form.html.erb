<%= simple_form_for(@user, url: [:admin, @user]) do |f| %>

  <%= f.input :name, autofocus: true %>

  <%= f.input :username do %>
    <div class='input-group'>
      <%= f.input_field :username, class: 'form-control' %>
      <span class='input-group-text'>@utfpr.edu.br</span>
    </div>
  <% end %>

  <%= f.input :alternative_email, autofocus: true %>
  <%= f.input :registration_number %>
  <%= f.input :cpf %>
  <%= f.input :active, as: :checkbox_tabler %>

    <div class="custom-file mb-5">
    <%= f.file_field :signature_image, class: 'custom-file-input' %>
    <%= f.label :signature_image, class: 'custom-file-label' %>
      <%# if f.object.signature_image %>
        <%#= image_tag f.object.signature_image.thumb.url %>
        <%#= f.label :remove_image %>
        <%#= f.check_box :remove_image %>
      <%# end %>
    </div>
  <div class='d-flex'>
    <%= link_to t('helpers.links.all.m', model: t('activerecord.models.user.other')),
                admin_users_path, class: 'btn btn-secondary' %>
    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
